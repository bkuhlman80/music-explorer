# --- Music Explorer configuration ---
# MusicBrainz does not require auth, but it REQUIRES a descriptive User-Agent.
# Format: appname/version (your-email)
USER_AGENT="music-explorer/0.1 (youremail@example.com)"
MB_BASE_URL="https://musicbrainz.org/ws/2"
MB_RATE_LIMIT_MS=1100            # polite: â‰¥1.1s between requests
MB_MAX_RETRIES=3
MB_TIMEOUT_S=30

# Optional seed list for pulls (comma-separated artist names or MBIDs)
ARTISTS_SEED="Radiohead,Taylor Swift,Daft Punk"

# Timezone used for charts and caching notes
TZ="UTC"

# Streamlit run config
STREAMLIT_PORT=8501
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
